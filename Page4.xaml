<Window x:Class="UI_Hack.Page4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="URL Legitimacy Checker" Height="450" Width="600">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Enter the URL to check its legitimacy:" />
            <TextBox x:Name="urlTextBox" Margin="0 10 0 20" />

            <Button Content="Check Legitimacy" Click="CheckLegitimacy_Click" Width="120" />

            <TextBlock x:Name="resultTextBlock" Margin="0 20 0 0" FontWeight="Bold" />
        </StackPanel>
    </Grid>

</Window>
